<h1>Post List</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Content</th>
		<th>Date</th>
	</tr>
 
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.content %></td>
			<td><%= post.datetime %></td>
			<td><%= link_to 'Show', post_path(post) %></td>
		</tr>
	<% end %>
</table>
